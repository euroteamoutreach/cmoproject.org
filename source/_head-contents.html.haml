%meta{ charset: "utf-8" }
%meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
%meta{ content: "width=device-width, initial-scale=1.0", name: "viewport" }
= tag "meta", name: "robots", content: "index,follow"
= tag "meta", name: "description", content: data.site.description.to_s
= tag "meta", name: "author", content: "Euro Team Outreach, Inc."
= tag "meta", name: "google-site-verification", content: "SFptASFx8YkEojtumC6U6VVLRBaShVrvmaTXDESgqf8"
%title= full_title(current_page.data.title)
= tag "meta", property: "og:url", content: data.site.url
