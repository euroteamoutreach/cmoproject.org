= tag "meta", property: "og:description", content: data.site.description.to_s
= tag "meta", property: "og:image", content: "https://s3.amazonaws.com/images.cmoproject.org/cmo-logo.png"
= favicon_tag "images/cmo-favicon.png"
= tag "link", rel: "apple-touch-icon", href: "images/apple-touch-icon.png"
= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Oxygen:400,300,700", type: "text/css"
