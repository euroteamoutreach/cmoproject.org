---
layout: home
---

<% content_for :assets do %>
  <%= javascript_include_tag "nav-scroll", "top" %>
<% end %>

<section class="nav-transparent" role="banner">
  <div class="navigation-wrapper">
    <% link_to "/", class: "logo" do %>
      <%= inline_svg "cmo-logo-two-tone.svg", class: "svg-logo" %>
    <% end %>
    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu-tra"><i class="fa fa-bars"></i></a>
    <nav role="navigation">
      <ul id="js-navigation-menu-tra" class="navigation-menu show">
        <%= partial "nav-links" %>
      </ul>
    </nav>
  </div>
</section>

<section id="alpha">
  <h1>Carpathian Mountain Outreach</h1>
  <p>&ldquo;Go ye therefore, and teach all nations...&rdquo; (Matthew 28:19)</p>
  <a class="scroll scroll-on-page-link" href="#call-to-men">
    <i class="fa fa-chevron-down fa-2x animated"></i>
  </a>
</section>

<section id="call-to-men">
  <div class="wrap">
    <aside>
      <%= inline_svg "cmo-logo-full.svg", class: "svg-logo" %>
    </aside>
    <article>
      <h2>A Call to Men</h2>
      <%= data.content.call_to_men %>
    </article>
  </div>
</section>

<section id="cmo-men-sunset">

  <div id="js-fadeInElement" class="fade-in-element">
    <h2>Got 1 minute?</h2>

    <div class="modal">
      <label for="modal-1">
        <div class="modal-trigger">
          <span class="trigger-text">Watch the CMO Movie Trailer</span>
          <i class="fa fa-play-circle fa-2x fa-fw"></i>
        </div>
      </label>
      <input class="modal-state" id="modal-1" type="checkbox" />
      <div class="modal-fade-screen">
        <div class="modal-inner">
          <div class="modal-close" for="modal-1"></div>
          <div class="video">
            <div class="video-wrapper">
              <iframe src="https://player.vimeo.com/video/56083375?color=2196F3&portrait=0" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
    <p id="full-movie-link"><%= link_to "Or watch the full movie here", "/movie" %></p>
  </div>
</section>

<section id="the-plan">
  <div class="wrap">
    <div class="cards">
      <div class="card">
        <div class="card-image">
          <%= image_tag "the-plan.jpg" %>
        </div>
        <div class="card-header">
          <h5>The Plan</h5>
        </div>
        <div class="card-copy">
          <%= data.content.the_plan %>
        </div>
      </div>

      <div class="card">
        <div class="card-image">
          <%= image_tag "when-where-how.jpg" %>
        </div>
        <div class="card-header">
          <h5>When, Where, How</h5>
        </div>
        <div class="card-copy">
          <%= data.content.when_where_how %>
        </div>
      </div>

      <div class="card">
        <div class="card-image">
          <%= image_tag "requirements.jpg" %>
        </div>
        <div class="card-header">
          <h5>Basic Requirements</h5>
        </div>
        <div class="card-copy">
          <%= data.content.requirements %>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="camping-landscape">
</section>
